<main class="main-user-container">
  <!-- Loop through each user in the 'users' array -->
  <% users.forEach(user => { %>

  <!-- Link to the user's detailed page. -->
  <a href="/users/<%= user.id %>" class="user-card-link no-style-link">
    <!-- User card container -->
    <div class="user-card">
      <!-- Container for the user's image -->
      <div class="image-container">
        <img src="<%= user.image %>" alt="User Photo" class="user-image" />
      </div>

      <!-- Container for user details -->
      <div class="user-details">
        <!-- User's full name -->
        <h2 class="user-name"><%= user.firstName %> <%= user.lastName %></h2>

        <!-- User's username -->
        <p class="user-info">Username: <%= user.username %></p>

        <!-- User's gender with capitalized first letter -->
        <p class="user-info">Gender: <%= capitalisation(user.gender) %></p>

        <!-- User's age -->
        <p class="user-info">Age: <%= user.age %></p>
      </div>
    </div>
  </a>

  <% }) %>
</main>
